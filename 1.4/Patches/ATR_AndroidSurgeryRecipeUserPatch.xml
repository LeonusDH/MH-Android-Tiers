<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <!-- Add androids to MHC's Surgery Recipes at the abstract level -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/RecipeDef[@Name="MHC_surgeryMechanicalBase"]/recipeUsers</xpath>
        <value>
            <li>ATR_Tier1Android</li>
            <li>ATR_Tier2Android</li>
            <li>ATR_Tier3Android</li>
            <li>ATR_Tier4Android</li>
        </value>
    </Operation>

    <!-- Add androids to ATR's android surgery recipes at the abstract level -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/RecipeDef[@Name = "ATR_surgeryMechanicalBase"]/recipeUsers</xpath>
        <value>
            <li>ATR_Tier1Android</li>
            <li>ATR_Tier2Android</li>
            <li>ATR_Tier3Android</li>
            <li>ATR_Tier4Android</li>
        </value>
    </Operation>

</Patch>